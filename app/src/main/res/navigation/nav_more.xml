<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_more"
    app:startDestination="@id/moreFragment">

    <fragment
        android:id="@+id/moreFragment"
        android:name="com.specindia.ecommerce.ui.fragments.MoreFragment"
        android:label="More"
        tools:layout="@layout/fragment_more">
        <action
            android:id="@+id/action_moreFragment_to_orderHistoryFragment"
            app:destination="@id/orderHistoryFragment" />
        <action
            android:id="@+id/action_moreFragment_to_cartListFragment"
            app:destination="@id/cartListFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderHistoryFragment"
        android:name="com.specindia.ecommerce.ui.fragments.OrderHistoryFragment"
        android:label="Order History"
        tools:layout="@layout/fragment_order_history">
        <action
            android:id="@+id/action_orderHistoryFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="com.specindia.ecommerce.ui.fragments.OrderDetailsFragment"
        android:label="Order Details"
        tools:layout="@layout/fragment_order_details">

        <argument
            android:name="order_id"
            android:defaultValue="0"
            app:argType="integer" />

        <action
            android:id="@+id/action_orderDetailsFragment_to_checkOutFragment"
            app:destination="@id/checkOutFragment" />


    </fragment>


    <fragment
        android:id="@+id/checkOutFragment"
        android:name="com.specindia.ecommerce.ui.fragments.CheckOutFragment"
        android:label="CheckOut"
        tools:layout="@layout/fragment_checkout">

    </fragment>

    <fragment
        android:id="@+id/cartListFragment"
        android:name="com.specindia.ecommerce.ui.fragments.CartListFragment"
        android:label="Cart List Fragment"
        tools:layout="@layout/fragment_cart_list" />

</navigation>