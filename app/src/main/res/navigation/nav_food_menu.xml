<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_food_menu"
    app:startDestination="@id/foodMenuFragment">

    <fragment
        android:id="@+id/foodMenuFragment"
        android:name="com.specindia.ecommerce.ui.dashboard.menu.FoodMenuFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_food_menu">
        <action
            android:id="@+id/action_foodMenuFragment_to_cartListFragment"
            app:destination="@id/cartListFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartListFragment"
        android:name="com.specindia.ecommerce.ui.cart.CartListFragment"
        android:label="Cart List"
        tools:layout="@layout/fragment_cart_list">
        <action
            android:id="@+id/action_cartListFragment_to_checkOutFragment"
            app:destination="@id/checkOutFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkOutFragment"
        android:name="com.specindia.ecommerce.ui.checkout.CheckOutFragment"
        android:label="Check Out"
        tools:layout="@layout/fragment_checkout">
        <argument
            android:name="total"
            android:defaultValue="0"
            app:argType="integer"/>

        <argument
            android:name="sub_total"
            android:defaultValue="0"
            app:argType="integer" />

        <argument
            android:name="extra_charges"
            android:defaultValue="0"
            app:argType="integer"/>

        <argument
            android:name="restaurant_id"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_checkOutFragment_to_shippingAddressFragment"
            app:destination="@id/shippingAddressFragment" />
    </fragment>
    <fragment
        android:id="@+id/shippingAddressFragment"
        android:name="com.specindia.ecommerce.ui.checkout.address.ShippingAddressFragment"
        android:label="Shipping Address"
        tools:layout="@layout/fragment_shipping_address">
        <action
            android:id="@+id/action_shippingAddressFragment_to_setLocationFragment"
            app:destination="@id/setLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/setLocationFragment"
        android:name="com.specindia.ecommerce.ui.checkout.address.SetLocationFragment"
        android:label="Add New Location"
        tools:layout="@layout/fragment_set_location">
        <action
            android:id="@+id/action_setLocationFragment_to_addAddressFragment"
            app:destination="@id/addAddressFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAddressFragment"
        android:name="com.specindia.ecommerce.ui.checkout.address.AddAddressFragment"
        android:label="Add Address"
        tools:layout="@layout/fragment_add_address">

        <argument
            android:name="full_address"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="latitude"
            app:argType="string"
            android:defaultValue="0.0" />

        <argument
            android:name="longitude"
            app:argType="string"
            android:defaultValue="0.0" />
        <action
            android:id="@+id/action_addAddressFragment_to_shippingAddressFragment"
            app:destination="@id/shippingAddressFragment"
            app:popUpTo="@id/shippingAddressFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>