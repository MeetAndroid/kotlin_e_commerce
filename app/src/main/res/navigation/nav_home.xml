<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.specindia.ecommerce.ui.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_homeDetailsFragment"
            app:destination="@id/homeDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_restaurantDetailsFragment"
            app:destination="@id/restaurantDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeDetailsFragment"
        android:name="com.specindia.ecommerce.ui.fragments.HomeDetailsFragment"
        android:label="Home Details"
        tools:layout="@layout/fragment_home_details" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.specindia.ecommerce.ui.fragments.SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/restaurantDetailsFragment"
        android:name="com.specindia.ecommerce.ui.fragments.RestaurantDetailsFragment"
        android:label="fragment_restaurant_details"
        tools:layout="@layout/fragment_restaurant_details">
        <!--        <argument-->
        <!--            android:name="restaurant_id"-->
        <!--            app:argType="int"-->
        <!--            android:defaultValue="0" />-->
        <action
            android:id="@+id/action_restaurantDetailsFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.specindia.ecommerce.ui.fragments.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details">

        <argument
            android:name="product_id"
            android:defaultValue="0"
            app:argType="integer" />

    </fragment>

</navigation>